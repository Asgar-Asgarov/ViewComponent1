@model List<Category>


     <div class="row" id="productList">
       
                   @foreach (var item in Model)
                   {
                    <div class="col-sm-6 col-md-4 col-lg-3 mt-3">
                        <div class="product-item text-center" data-id="@item.Name.ToLower()">
                            <div class="img">
                                <a href="">
                                    @if (item.products.FirstOrDefault().productImages.Count>0)
                                    {
                                        <img src="~/img/@item.products.FirstOrDefault().productImages.FirstOrDefault().ImageUrl" class="img-fluid"  alt="">
                                    }
                                    else
                                    {
                                        <img src="~/img/cat.jpg "  alt="">
                                    }
                                </a>
                            </div>
                            <div class="title mt-3">
                                <h6>@item.products.FirstOrDefault().Name</h6>
                            </div>
                            <div class="price">
                                
                                <span class="text-black-50">$@item.products.FirstOrDefault().Price</span>
                            </div>
                        </div>
                    </div>
                   }                
                </div>
